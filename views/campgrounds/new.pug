include ../partials/head

body
  header.hero.is-white.is-fullheight
    include ../partials/nav
    
    #hero--full-img.hero-body.has-bg-img
      .container
        .columns.is-centered
          #form-box.column.is-5.box
            form(action='/campgrounds' method='post')
              .columns.is-centered
                .column
                  h1#form-title.title.is-4
                    span Create New Campground
              .columns.is-centered
                .field.column
                  .control
                    input.input.is-medium(type='text' name='camp[name]' placeholder='name')
              .columns.is-centered
                .field.column
                  .control
                    input.input.is-medium(type='text' name='camp[image]' placeholder='image url')
              .columns.is-centered
                .field.column
                  .control
                    textarea.textarea.is-medium(name='camp[description]' placeholder='description')
              .columns.is-centered
                .field.column.is-grouped.is-grouped-centered
                  p.control
                    a.button.is-white.is-medium(href='/campgrounds') Return
                  p.control
                    button.button.is-black.is-medium Create

